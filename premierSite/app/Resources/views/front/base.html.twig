<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/global.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>

    <body>
        <div class="parallax-container">
                <div class="parallax">
                    <img src="{{ asset('images/background/haut.jpg') }}">
                </div>
        </div>

        <div class="section white">
            <div class="row container">

                <div class="fixed-action-btn horizontal click-to-toggle">
                    <a class="btn-floating btn-large blue-green">
                        <i class="material-icons">menu</i>
                    </a>
                    <ul>
                        <li>{{ knp_menu_render('main') }}</li>
                    </ul>
                </div>
                Date : {{ "now"|date('d/m/Y') }}
                <br>
                Heure : {{ "now"|date('H:i:s') }}

                {% include('common/_partials/_alerts.html.twig') %}
                {% block body %}{% endblock %}
                {% block javascripts %}
                    <script src="{{ asset('build/app.js') }}"></script>
                {% endblock %}
            </div>
        </div>

        <div class="parallax-container">
                <div class="parallax">
                    <img src="{{ asset('images/background/bas.jpg') }}">
                </div>
        </div>

    </body>

</html>
<script>
    $(document).ready(function(){
        $('.parallax').parallax();
    });
</script>